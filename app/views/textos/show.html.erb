<%- model_class = Texto -%>
<div class="page-header">
  <h3><%= @texto.titulo %></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:titulo) %>:</strong></dt>
  <dd><%= @texto.titulo %></dd>
  <dt><strong>Texto:</strong></dt>
  <dd>
    <%= link_to "Download", @texto.arquivo.url %>
  </dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")), entidade_textos_path, :class => 'btn btn-default'  %>

<% if user_signed_in? %>
  <% if (current_user.email == @texto.entidade.email || current_user.admin?) %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_entidade_texto_path(@dados, @texto), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")), entidade_texto_path(@dados, @texto), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'VocÃª tem certeza?')) }, :class => 'btn btn-danger' %>
  <% end %>
<% end %>
