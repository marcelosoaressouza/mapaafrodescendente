<%= form_for [@dados, @texto], :html => { :multipart => true, :class => "form-horizontal texto" } do |f| %>

    <% if @texto.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@texto.errors.count, "error") %> impediu de gravar:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @texto.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :titulo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :titulo, :class => 'form-control' %>
    </div>
    <%= error_span(@texto[:titulo]) %>
  </div>

  <div class="control-group">
    <%= f.label :arquivo, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :arquivo %>
    </div>
    <%= error_span(@texto[:arquivo]) %>
  </div>

  <div class="control-group">
    <%= f.label :tags, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tag_list %> (Use Virgula como Separador, Exemplo: Terreiro, Quilombo, Cultura)
    </div>
  </div>

  <%= f.hidden_field :entidade_id, :value => @dados.id %>

  <% if user_signed_in? %>
    <br/>
    <% if (current_user.email == @dados.email || current_user.admin?) ||  params[:action] == 'new' %>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")), entidade_textos_path, :class => 'btn btn-default' %>
    <% end %>
  <% end %>
<% end %>
