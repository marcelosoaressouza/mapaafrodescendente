<%- model_class = Foto -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h3>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>TÃ­tulo</th>
      <th>Imagem</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @fotos.each do |foto| %>
      <tr>
        <td><%= link_to foto.id, entidade_fotos_path(@dados) %></td>
        <td><%= foto.titulo %></td>
        <td><%= link_to (image_tag foto.imagem.url(:thumb), :alt => foto.titulo, :title => foto.titulo), foto.imagem.url %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_entidade_foto_path(@dados, foto), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      entidade_foto_path(@dados, foto),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_entidade_foto_path,
            :class => 'btn btn-primary' %>
