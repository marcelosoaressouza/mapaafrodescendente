<%- model_class = Curso -%>
<div class="page-header">
  <h3><%= @curso.titulo %></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:titulo) %>:</strong></dt>
  <dd><%= @curso.titulo %></dd>
  <dt><strong>Arquivo para Download:</strong></dt><br/>
  <dd>
    <%= link_to "Download", curso.arquivo.url %>
  </dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              entidade_cursos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_entidade_curso_path(@dados, @curso), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              entidade_curso_path(@dados, @curso),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'VocÃª tem certeza?')) },
              :class => 'btn btn-danger' %>
