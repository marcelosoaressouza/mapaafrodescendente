<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
<div class="control-group">
  <%= f.label :email, 'E-Mail', :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :email, :class => 'text_field' %>
  </div>
</div>

<div class="control-group">
  <%= f.label :admin, 'Administrador?', :class => 'control-label' %>
  <div class="controls">
    <%= f.select :admin, 'Sim' => true, 'NÃ£o' => false %>
  </div>
</div>

<div class="form-actions">
  <%= f.submit nil, :class => 'btn btn-primary', :disable_with => 'Enviando...' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn' %>
</div>
<% end %>
