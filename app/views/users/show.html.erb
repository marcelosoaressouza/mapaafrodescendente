<%- model_class = User -%>
<div class="page-header">
  <h3><%=@user.email %></h3>
</div>

<div class="tab-content">
  <div class="active tab-pane">
    <dl class="dl-horizontal">
      <dt>
        <strong>E-Mail:</strong>
      </dt>
      <dd>
        <%= @user.email %>
      </dd>
      <dt>
        <strong>Último IP:</strong>
      </dt>
      <dd>
        <%= @user.last_sign_in_ip %>
      </dd>
      <dt>
        <strong>Administrador?:</strong>
      </dt>
      <dd>
        <%= I18n.t(@user.admin.to_s) %>
      </dd>
    </dl>

    <% if user_signed_in? %>
    <% if current_user.admin? %>
    <div class="form-actions">
      <%= link_to t('.back', :default => t("helpers.links.back")), users_path, :class => 'btn btn-default'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_user_path(@user), :class => 'btn btn-default' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")), user_path(@user), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem Certeza?')) }, :class => 'btn btn-danger' %>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
