<%- model_class = Entidade -%>
<div class="page-header">
  <h1><%=@entidade.entidade %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:slug) %>:</strong></dt>
  <dd><%= @entidade.slug %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @entidade.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:responsavel) %>:</strong></dt>
  <dd><%= @entidade.responsavel %></dd>
  <dt><strong><%= model_class.human_attribute_name(:municipio) %>:</strong></dt>
  <dd><%= @entidade.municipio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:uf) %>:</strong></dt>
  <dd><%= @entidade.uf %></dd>
  <dt><strong><%= model_class.human_attribute_name(:endereco) %>:</strong></dt>
  <dd><%= @entidade.endereco %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefone) %>:</strong></dt>
  <dd><%= @entidade.telefone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descricao) %>:</strong></dt>
  <dd><%= @entidade.descricao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descritor) %>:</strong></dt>
  <dd><%= @entidade.descritor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telecentro) %>:</strong></dt>
  <dd><%= I18n.t(@entidade.telecentro.to_s) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gesac) %>:</strong></dt>
  <dd><%= I18n.t(@entidade.gesac) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ponto_cultura) %>:</strong></dt>
  <dd><%= I18n.t(@entidade.ponto_cultura) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:estudo_cultural) %>:</strong></dt>
  <dd><%= I18n.t(@entidade.estudo_cultural) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quilombo) %>:</strong></dt>
  <dd><%= I18n.t(@entidade.quilombo) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quilombo_urbano) %>:</strong></dt>
  <dd><%= I18n.t(@entidade.quilombo_urbano) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:capoeira) %>:</strong></dt>
  <dd><%= I18n.t(@entidade.capoeira) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:terreiro) %>:</strong></dt>
  <dd><%= I18n.t(@entidade.terreiro) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nucleo_formacao) %>:</strong></dt>
  <dd><%= I18n.t(@entidade.nucleo_formacao) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:grupo_mestre) %>:</strong></dt>
  <dd><%= I18n.t(@entidade.grupo_mestre) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:radio) %>:</strong></dt>
  <dd><%= I18n.t(@entidade.radio) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:estudio) %>:</strong></dt>
  <dd><%= I18n.t(@entidade.estudio) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:roupa_acessorio) %>:</strong></dt>
  <dd><%= I18n.t(@entidade.roupa_acessorio) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:evento) %>:</strong></dt>
  <dd><%= I18n.t(@entidade.evento) %></dd>

  <!--
    <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
    <dd><%= @entidade.latitude %></dd>
    <dt><strong><%= model_class.human_attribute_name(:longitude) %>:</strong></dt>
    <dd><%= @entidade.longitude %></dd>
  -->

  <br/>
  <dt><strong>Localização</strong></dt>
  <dd>
    <%= map(:center  => {:latlng => [@entidade.latitude, @entidade.longitude], :zoom => 8 },
            :markers => [ {:latlng => [@entidade.latitude, @entidade.longitude], :popup => "#{@entidade.entidade}"}] ) %>
  </dd>

</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              entidades_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_entidade_path(@entidade), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              entidade_path(@entidade),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
